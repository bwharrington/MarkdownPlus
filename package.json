{
  "name": "markdownplus",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start": "npm run build && electron .",
    "watch": "webpack --config webpack.config.js --watch",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "package": "webpack --config webpack.config.js --mode production && electron-builder build --win && node zip-executables.js",
    "package-mac": "webpack --config webpack.config.js --mode production && electron-builder build --mac",
    "package-linux": "webpack --config webpack.config.js --mode production && electron-builder build --linux",
    "dist": "npm run build && electron-builder build --win"
  },
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "A multi-tab Markdown editor with live preview",
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "html-webpack-plugin": "^5.6.3",
    "jimp": "^1.6.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "build": {
    "appId": "com.markdownplus.app",
    "productName": "MarkdownPlus",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown",
        "description": "Markdown document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown",
        "description": "Markdown document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      },
      {
        "ext": "mdown",
        "name": "Markdown",
        "description": "Markdown document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      },
      {
        "ext": "mkd",
        "name": "Markdown",
        "description": "Markdown document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      },
      {
        "ext": "mkdn",
        "name": "Markdown",
        "description": "Markdown document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      },
      {
        "ext": "mdx",
        "name": "MDX",
        "description": "MDX document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      },
      {
        "ext": "mdwn",
        "name": "Markdown",
        "description": "Markdown document",
        "icon": "assets/MarkdownPlus-padded.png",
        "role": "Editor"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/MarkdownPlus-padded.png",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/MarkdownPlus-padded.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/MarkdownPlus-padded.png"
    }
  }
}
